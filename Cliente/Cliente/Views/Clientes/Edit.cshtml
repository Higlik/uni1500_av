@model Clientes

@{
    ViewData["Titulo"] = "Editar";
}

<h1>Editar</h1>

<h4>Clientes</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Client-Identificador" />
            <div class="grupo-formulario">
                <label asp-for="Nome" class="controle-linha"></label>
                <input asp-for="Nome" class="controle-formulario" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="grupo-formulario">
                <label asp-for="Email" class="controle-linha"></label>
                <input asp-for="Email" class="controle-formulario" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="grupo">
                <label asp-for="Celular" class="controle-linha"></label>
                <input asp-for="Celular" class="controle-formulario" />
                <span asp-validation-for="Celular" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cidade" class="controle-linha"></label>
                <input asp-for="Cidade" class="controle-linha" />
                <span asp-validation-for="Cidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreatedAt" class="controle-linha"></label>
                <input asp-for="CreatedAt" class="controle-linha" />
                <span asp-validation-for="CreatedAt" class="text-danger"></span>
            </div>
            <div class="grupo-listagem">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
