@model Clientes

@{
    ViewData["Title"] = "Criar";
}

<h1>Criar</h1>

<h4>Clientes</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Criar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="controle-linha"></label>
                <input asp-for="Nome" class="controle-formulario" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="formularo-grupo">
                <label asp-for="Email" class="controle-linha"></label>
                <input asp-for="Email" class="controle-formulario" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Celular" class="controle-linha"></label>
                <input asp-for="Celular" class="controle-formulario" />
                <span asp-validation-for="Celular" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Celular" class="control-label"></label>
                <input asp-for="Celular" class="controle-formulario" />
                <span asp-validation-for="Cidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreatedAt" class="control-label"></label>
                <input asp-for="CreatedAt" class="controle-formulario" />
                <span asp-validation-for="CreatedAt" class="text-danger"></span>
            </div>
            <div class="grupo-formulario">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">De volta para lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
